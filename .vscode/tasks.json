{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "file",
      "type": "shell",
      "command": "npx ts-node \"${file}\" -exit",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": { "env": { "file": "${file}" } },
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
